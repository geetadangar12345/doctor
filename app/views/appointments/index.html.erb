<p>booked appointment</p>
<table border="1">
  <thead>
    <tr>
      <th>Time</th>
      <th>Day</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @appointment.each do |appointment| %>
      <tr>
        <%if appointment.is_select == true%>
          <td><%= appointment.doctor.start_time %></td>
          <td><%= appointment.wek.name %></td>
          <td><%= appointment.person_name.name %></td>
          
          <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
      </tr>
    <% end %>
  </tbody>

  <table border="1">
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>
    <p>panding appointment</p>
    <% @appointment.each do |appointment| %>
      <tr>
        <%if appointment.is_select == false%>
          <td><%= appointment.doctor.start_time %></td>
          <td><%= appointment.wek.name %></td>
          <td><%= appointment.person_name.name %></td>
          <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%=link_to "Add Appointment" , new_appointment_path%><br/>
